@page
@model RegisterModel
@{
    ViewData["Title"] = "注册";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>注册账户</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Input.Score"></label>
                <input asp-for="Input.Score" class="form-control" />
                <span asp-validation-for="Input.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Provice"></label>
                <select asp-for="Input.Provice" asp-items="Model.ProvicesList">
                </select>
                <span asp-validation-for="Input.Provice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Year"></label>
                <select asp-for="Input.Year" asp-items="Model.YearList">
                </select>|
                <span asp-validation-for="Input.Year" class="text-danger"></span>
            </div>*@
            <button type="submit" class="btn btn-primary">注册</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
