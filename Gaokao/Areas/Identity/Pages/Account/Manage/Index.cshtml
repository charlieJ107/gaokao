@page
@model IndexModel
@{
    ViewData["Title"] = "用户设置";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.OwnScore"></label>
                <input asp-for="Input.OwnScore" class="form-control" />
                <span asp-validation-for="Input.OwnScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.OwnRank"></label>
                <input asp-for="Input.OwnRank" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Provice"></label>
                <select asp-for="Input.Provice" asp-items="Model.ProvicesList">
                </select>
                <span asp-validation-for="Input.Provice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Year"></label>
                <select asp-for="Input.Year" asp-items="Model.YearList">
                </select>|
                <span asp-validation-for="Input.Year" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">保存</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}